{
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json"}
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["*"],
      "@vunix/core": ["./src"]
    },
    "lib": ["esnext"],
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.vue", 
    "src/**/*.d.ts"
  ]
}
